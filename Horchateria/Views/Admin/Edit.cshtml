@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<div class="form-control-range">
    <form asp-controller="Admin" asp-action="Edit" method="post">
        @Html.LabelFor(m => m.Name) @Html.EditorFor(m => m.Name,
new { htmlAttributes = new { @class = "form-control" } }) </br>

        @Html.LabelFor(m => m.Category) @Html.EditorFor(m => m.Category,
new { htmlAttributes = new { @class = "form-control" } }) </br>

        @Html.LabelFor(m => m.Description) @Html.EditorFor(m => m.Description,
new { htmlAttributes = new { @class = "form-control" } }) </br>

        @Html.LabelFor(m => m.Price) @Html.EditorFor(m => m.Price,
new { htmlAttributes = new { @class = "form-control" } }) </br>

        <input type="submit" value="Save Changes" class="btn btn-primary">
    </form>
</div>
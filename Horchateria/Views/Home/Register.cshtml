@model Horchateria.Models.UserData
@{
    ViewData["Title"] = "Register";
}

@{ 
    if (ViewData["errorMsg"] != null)
    {
        <p><strong>@ViewData["errorMsg"]</strong></p>
    }
}
<div class="container" align="justify">
    <h2>Please fill the form to register</h2> <br/>

    <form asp-action="AddUser" asp-action="AddUser" method="post">
    
        @Html.LabelFor(m => m.FirstName): @Html.EditorFor(m => m.FirstName,
          new { htmlAttributes = new { @class = "form-control" }  } )<br />
       
        @Html.LabelFor(m => m.LastName): @Html.EditorFor(m => m.LastName,
          new { htmlAttributes = new { @class = "form-control" }  } )<br />

        @Html.LabelFor(m => m.Email): <input asp-for="Email" type ="email" class="form-control" placeholder="name@example.com"/> <br/>

        @Html.LabelFor(m => m.Password): <input asp-for="Password" type ="password" class="form-control"/> <br/>

        @Html.LabelFor(m => m.PhoneNumber): <input asp-for="PhoneNumber" class="form-control"/> <br/>
        
        @Html.LabelFor(m => m.Gender)
        <select asp-for="Gender"class="form-control">
            <option>Female</option>
            <option>Male</option>
            <option>Other</option>
        </select><br />
        
        @Html.LabelFor(m => m.SpanishSpeaker)
        <select asp-for="Gender"class="form-control">
            <option>¡Claro que si!</option>
            <option>Sorry, no spanish here.</option>
        </select><br />

        <input type="submit" value="Register!" />
    </form>
</div>


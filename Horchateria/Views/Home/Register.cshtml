
@{
    ViewData["Title"] = "Register";
}

<div class="container" align="center">
    <h2>Please fill the form to register</h2> <br/> <br/>

    <form action="/Home/AddUser" method="post">
    
         Name: <input type="text" name="fname" maxlength="20" /> <br /> <br />

        Last Name: <input type="text" name="lname" maxlength="20" /> <br /> <br />

        Email: <input type="email" name="email" /> <br /> <br />

        Phone Number: <input type="number" name="phonenumber" /> <br /> <br />

        Password: <input type="password" name="password" maxlength="30" /> <br /><br />

        <input type="submit" value="Register!" />
    </form>
</div>

